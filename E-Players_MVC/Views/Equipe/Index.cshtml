@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label >ID</label>
    <input type="text" name="IdEquipe" required>

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">CADASTRAR</button>
</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px"></td>
                <td><a asp-area= "" asp-controller="Equipe" asp-action="Deletar" asp-route-id="@equipe.IdEquipe">EXCLUIR</a></td>
            </tr>
        }
    </tbody>
</table>