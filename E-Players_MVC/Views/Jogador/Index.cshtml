@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID Jogador</label>
    <input type="text" name="IdJogador" required>

    <label>ID Equipe</label>
    <input type="text" name="IdEquipe" required>

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Email</label>
    <input type="text" name="Email">

    <label>Senha</label>
    <input type="password" name="Senha">

    <button type="submit">CADASTRAR</button>
</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID Jogador</th>
        <th>ID Equipe</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Senha</th>
    </thead>
    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.Idjogador</td>
                <td>@jogador.IdEquipe</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td>@jogador.Senha</td>
                <td><a asp-area= "" asp-controller="Jogador" asp-action="Deletar" asp-route-id="@jogador.Idjogador">EXCLUIR</a></td>
            </tr>
        }

    </tbody>

</table>