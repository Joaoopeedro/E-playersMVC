@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="banner-login">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>



<section class="conteiner-central">
    <div class="conteiner informacoes-dados">
        <div class="email">
            <form class="organização-dados" method="POST" action='@Url.Action("Cadastrar")'>
                <label>ID Jogador</label>
                <input type="text" name="IdJogador" required>
                <label>ID Equipe</label>
                <input type="text" name="IdEquipe" required>
                <label for="">Nome do Jogador</label>
                <input class="nome" type="text" name="Nome">
                <label for="">Email</label>
                <input class="nome" type="text" name="Email">
                <label for="">Senha</label>
                <input class="nome" type="password" name="Senha">
                <div class="organizacao-botao">
                    <button class="botao-cadastrar" type="submit">Cadastrar</button>
                </div>
            </form>
        </div>
        <div>
            <h2 class="dados-h2">Lista de Jogadores</h2>
        </div>
        <div>
            <table class="tabela" style="width:770px">
                <thead class = "tabela_1">
                    <th>ID Jogador</th>
                    <th>ID Equipe</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Senha</th>
                </thead>
                <tbody>
                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                        <tr class="tabela_2">
                            <td>@jogador.Idjogador</td>
                            <td>@jogador.IdEquipe</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                            <td>@jogador.Senha</td>
                            <td class="deletar"><a asp-area="" asp-controller="Jogador" asp-action="Deletar"
                                asp-route-id="@jogador.Idjogador">EXCLUIR</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>


</section>